---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
    @font-face {
        font-family: 'Roboto Mono';
        src: url('/fonts/RobotoMono-VariableFont_wght.ttf') format("truetype-variations");
        font-style: normal;
        font-weight: 1 999;
    }

    @font-face {
        font-family: 'Roboto Mono';
        src: url('/fonts/RobotoMono-Italic-VariableFont_wght.ttf') format("truetype-variations");
        font-style: italic;
        font-weight: 1 999;
    }

    @font-face {
        font-family: 'VT323';
        src: url('/fonts/VT323-Regular.ttf') format("truetype-variations");
        font-weight: 1 999;
    }

	:root {
		--color: 31, 31, 31;
		--primary: 36, 123, 160;
		--background: 255, 252, 255
	}

	html {
		color: rgb(var(--color));
		font-family: "Roboto Mono", system-ui, sans-serif;
		background-color: rgb(var(--background));
	}
</style>
