---
import Layout from '../layouts/Layout.astro'
import AboutMe from "../components/AboutMe.astro"
import Contact from "../components/Contact.astro"
import WhatToGet from "../components/WhatToGet.astro"
import References from "../components/References.astro"
import Reference from "../components/Reference.astro"
---

<Layout title="Website that works.">
	<main>
		<header>
			<h1>Freelance web developer</h1>
			<ul>
				<li>JavaScript & TypeScript</li>
				<li>HTML</li>
				<li>CSS</li>
				<li>PHP</li>
			</ul>
		</header>
		<AboutMe>
			<ul>
				<li>JavaScript</li>
				<li>TypeScript</li>
				<li>HTML</li>
				<li>SCSS</li>
				<li>PHP</li>
				<li>React</li>
				<li>NextJS - app & pages</li>
				<li>Bootstrap</li>
				<li>Strapi</li>
				<li>Astro</li>
				<li>Nette</li>
				<li>Flutter</li>
				<li>Linux</li>
			</ul>
		</AboutMe>
		<WhatToGet />
		<References>
			<ul>
				<li><Reference title="KNTB - hospital" year="2021" /></li>
				<li><Reference title="KNTB - future hospital" year="2023" /></li>
			</ul>
		</References>
		<Contact />
	</main>
	<footer>
		<p>Web is in construction <br> more info and references soon.</p>
	</footer>
</Layout>

<style lang="scss">
  main {
	max-width: 1000px;
	margin-inline: auto;
	padding-inline: 20px;
  }

  ul {
	gap: 6px 24px;
	padding: 0;
	display: flex;
	flex-wrap: wrap;
	list-style: none;
	align-items: center;
	justify-content: center;

	li {
	  position: relative;

	  &:nth-child(n+2) {
		&::before {
		  content: "â€¢";
		  top: 50%;
		  left: -12px;
		  position: absolute;
		  translate: -50% -50%;
		}
	  }
	}

	@media all and (min-width: #{map-get($breakpoints, "md")}) {
	  gap: 8px 32px;

	  li:nth-child(n+2)::before {
		left: -16px;
	  }
	}

	@media all and (min-width: #{map-get($breakpoints, "xl")}) {
	  gap: 10px 32px;
	}
  }

  footer {
	padding: 20px;
	font-size: 14px;
	text-align: center;
  }
</style>
